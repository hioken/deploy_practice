<div class="body">
      <div class="container">

        <p id="notice"></p>
        <div class="row">
        <div class="col-xs-3">
        <h2>User info</h2>

    <%= form_for(@user) do |f| %>

<% if @user.errors.any? %>
    <div class = "alert alert-warning">
        <ul>
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <li>error</li>
            <% end %>
        </ul>
    </div>
<% end %>

        <div class="form-group has-icon">
            <h3>name</h3>
            <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前"%>
        </div>
        <h3>profile_image</h3>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
        <h3>introduction</h3>
        <%= f.text_field :introduction %>
        <%= f.submit class:"btn btn-lg btn-block btn-base-1 mt-20" %>
    <% end %>
    </div>
    <div class="col-xs-9">
        
    </div>
</div>
  </div>
</div>